// Contenedor modal de toda la ventana
#register-modal.lightbox
    // Formulario de registro
    form#register-form.form
        .form__field
            label(for="register-email").form__label Email
            input(type="email" name="email").form__input
        .form__field
            label(for="register-password").form__label Password
            input(type="password" name="password").form__input
        .form__field
            label(for="register-password-2").form__label Repeat password
            input(type="password" name="password-2").form__input
        .form__field
            input.button(type="submit" name="button" value="Send").form__submit